#!/bin/bash
set -e

case "$1" in

  configure)
    if ! id -u bcash &> /dev/null
    then
        useradd --system -M -U bcash -s /bin/false
    fi

    if [ "$(stat -c '%U' /opt/coins/data/bch-testnet/bitcoin)" != "bcash" ]
    then
        chown -R bcash:bcash /opt/coins/data/bch-testnet/bitcoin
    fi
  ;;

esac

