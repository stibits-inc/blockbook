#!/bin/bash
set -e

case "$1" in

  configure)
    if ! id -u ethereum &> /dev/null
    then
        useradd --system -M -U ethereum -s /bin/false
    fi

    if [ "$(stat -c '%U' /opt/coins/data/eth-ropsten/eth)" != "ethereum" ]
    then
        chown -R ethereum:ethereum /opt/coins/data/eth-ropsten/eth
    fi
  ;;

esac

