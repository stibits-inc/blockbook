#!/bin/bash
set -e

case "$1" in

  configure)
    if ! id -u bitcoin &> /dev/null
    then
        useradd --system -M -U bitcoin
    fi

    if [ "$(stat -c '%U' /opt/coins/data/btc-testnet/bitcoin)" != "bitcoin" ]
    then
        chown bitcoin:bitcoin /opt/coins/data/btc-testnet/bitcoin
    fi
  ;;

esac

